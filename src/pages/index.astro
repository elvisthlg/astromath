---
import BaseLayout from '../layouts/BaseLayout.astro';
import MathWorkshop from '../components/MathWorkshop';
---

<BaseLayout title="Math Workshop">
	<div class="header-content">
		<h1>Visualizing Fractions with Tape Diagrams</h1>
		<p class="intro">
			Select an operation below to explore how it works visually using interactive tape diagrams.
		</p>
	</div>

	<MathWorkshop client:load />

</BaseLayout>

<style>
	.header-content {
		text-align: center;
		margin-bottom: 3rem;
	}
	h1 {
		font-size: 2.5rem;
		margin-bottom: 1rem;
		color: #111827;
	}
	.intro {
		font-size: 1.25rem;
		color: #4b5563;
		max-width: 600px;
		margin: 0 auto;
	}
</style>
