---
import BaseLayout from '../layouts/BaseLayout.astro';
import AdditionCalculator from '../components/AdditionCalculator';
---

<BaseLayout title="Addition">
	<h1>Adding Fractions</h1>
	<p class="explanation">
		Enter two fractions to see how they add up using tape diagrams!
	</p>

	<AdditionCalculator client:load />

</BaseLayout>

<style>
	.explanation {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		text-align: center;
	}
</style>
